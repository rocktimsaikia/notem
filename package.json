{
  "name": "notes-manager",
  "version": "0.0.0",
  "description": "Simple command line notes management.",
  "keywords": [
    "notes-manager"
  ],
  "repository": "rocktimsaikia/notes-manager",
  "funding": "https://github.com/sponsors/rocktimsaikia",
  "license": "MIT",
  "author": {
    "name": "Rocktim Saikia",
    "email": "rocktimthedev@gmail.com",
    "url": "https://rocktimsaikia.dev"
  },
  "type": "module",
  "bin": {
    "notes": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf ~/.notes/*",
    "demo": "tsx cli/index.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "release": "pnpm build && np",
    "test": "vitest"
  },
  "dependencies": {
    "@bomb.sh/args": "^0.3.1",
    "inquirer": "^12.5.2",
    "keyv": "^5.3.2",
    "keyv-file": "^5.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "^20.17.12",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">=18"
  },
  "tsup": {
    "entry": [
      "cli/index.ts"
    ],
    "minify": true,
    "clean": true,
    "format": "esm"
  }
}
